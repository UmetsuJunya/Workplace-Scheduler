PORT=3001

# Database Configuration (Prisma + PostgreSQL)
# For local development: use localhost:5432
# For Docker: use postgres:5432 (handled by root .env)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workplace_scheduler?schema=public"

# Authentication Configuration
AUTH_ENABLED=true  # Set to 'true' to enable JWT authentication, 'false' to disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
